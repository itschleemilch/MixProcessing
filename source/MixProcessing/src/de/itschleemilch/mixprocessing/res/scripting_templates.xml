<?xml version="1.0"?>
<scriptingHelp>
    <menu text="Channel Control">
        <item insert="mp.channelOn( 'channelName' );">Channel On</item>
        <item insert="mp.channelOff( 'channelName' );">Channel Off</item>
        <item insert="mp.channelBlacking( 'channelName' );">Fill Channel Black</item>
    </menu>
    <menu text="Channel Editing">
        <item insert="mp.channelEditing();">Edit Channels</item>
        <item insert="mp.channelNormal();">Exit Editing</item>
        <item insert="mp.createGroupChannel( 'newChannelName', 'sourceChannel1', 'source2'); /* Add more channels if necessary */">Create Grouped Channel</item>
        <item insert="mp.channelRename( 'oldChannelName', 'newNhannelName' );">Rename Channel</item>
        <item insert="mp.channelRemove( 'channelName' );">Remove Channel</item>
    </menu>
    <menu text="Rendering Control">
        <item insert="mp.forceRefresh();">Repaint Background</item>
    </menu>
    <menu text="Sketch Control">
        <item insert="mp.sketchOutput( 'sketchName', 'channelName' );">Set Output Channel</item>
        <item insert="mp.sketchOutputNoRestart( 'sketchName', 'channelName' );">Set Output Channel (no restart)</item>
        <item insert="mp.sketchRemove( 'sketchName' );">Remove from Channel</item>
        <item insert="mp.sketchRestart( 'sketchName' );">Restart Sketch</item>
        <item insert="mp.sketchSetVar( 'sketchName', 'varName', 5);">Set variable</item>
        <item insert="mp.sketchAlpha( 'sketchName', 0.5 );">Set opacity</item>
    </menu>
    <menu text="Mouse-Key Events">
        <item insert="mp.enableKeyEvents( 'sketchName', true);">Enable Key Events</item>
        <item insert="mp.enableKeyEvents( 'sketchName', false);">Disable Key Events</item>
        <item insert="mp.enableMouseEvents( 'sketchName', true);">Enable Mouse Events</item>
        <item insert="mp.enableMouseEvents( 'sketchName', false);">Disable Mouse Events</item>
    </menu>
    <menu text="Environment">
        <item insert="mp.environmentLoad( 'c:/Sketch1/' );">Load Processing Sketch</item>
    </menu>
</scriptingHelp>