        <node name="Braces_IF">
            <attribute name="enabled" value="true"/>
        </node>
        <node name="Braces_FOR_LOOP">
            <attribute name="enabled" value="true"/>
        </node>
        <node name="Braces_DO_WHILE_LOOP">
            <attribute name="enabled" value="true"/>
        </node>
